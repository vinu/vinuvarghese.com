---
import '../index.css';
import Footer from '../components/Footer';

const {
  title = 'Vinu Varghese | Technical Architect - Cloud & AI Solutions Expert',
  description = 'Vinu Varghese - Technical Architect with 20+ years of experience in cloud computing (AWS, Azure), artificial intelligence, and full-stack enterprise solutions. Expert in digital transformation, microservices, and scalable system design.',
} = Astro.props;

const siteUrl = 'https://www.vinuvarghese.com';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).href;
const measurementId = 'G-39XTPTVSMS';

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: 'Vinu Varghese',
  url: siteUrl,
  jobTitle: 'Technical Architect',
  worksFor: {
    '@type': 'Organization',
    name: 'Xminds Infotech Pvt Ltd',
  },
  address: {
    '@type': 'PostalAddress',
    addressLocality: 'Thiruvananthapuram',
    addressRegion: 'Kerala',
    addressCountry: 'IN',
  },
  email: 'vinu@vinuvarghese.com',
  sameAs: [
    'https://www.linkedin.com/in/vinuvarghese/',
    'https://github.com/vinu',
    'https://stackoverflow.com/users/674067/jang00',
  ],
  knowsAbout: [
    'Cloud Architecture',
    'AWS',
    'Azure',
    'Artificial Intelligence',
    'Machine Learning',
    'Microservices',
    'Full-Stack Development',
    'DevOps',
    'Enterprise Architecture',
    'Digital Transformation',
  ],
};
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth scroll-pt-20">
  <head>
    <meta charset="UTF-8" />
    <script is:inline>
      (function() {
        const stored = localStorage.getItem('theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        if (stored === 'dark' || (stored !== 'light' && prefersDark)) {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
      })();
    </script>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- Canonical -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- SEO Meta Tags -->
    <meta name="description" content={description} />
    <meta name="keywords" content="technical architect, cloud architect, AI solutions, enterprise architecture, digital transformation, AWS, Azure, microservices, full-stack development, DevOps, Kubernetes, Docker, React, Java, Python, Rust, machine learning, distributed systems, Vinu Varghese" />
    <meta name="author" content="Vinu Varghese" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="Vinu Varghese" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:image" content={`${siteUrl}/og-image.png`} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Vinu Varghese - Technical Architect" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${siteUrl}/og-image.png`} />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

    <!-- Google Analytics -->
    <script type="text/partytown" async src={`https://www.googletagmanager.com/gtag/js?id=${measurementId}`}></script>
    <script type="text/partytown" define:vars={{ measurementId }}>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', measurementId);
    </script>
  </head>
  <body class="transition-colors duration-300">
    <slot />
    <Footer />
  </body>
</html>
